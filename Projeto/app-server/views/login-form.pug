extends layout

block content
    .w3-container.w3-2020-mosaic-blue
      .w3-left
        h1 
          a(href='/' style="text-decoration:none") Film Log
      .w3-right
        h3
          a(href='/films') Films
    .w3-container
        h3
            b Insert your credentials
        form.w3-container(action='/login' method='POST' style='margin: 10px 250px;')
            label Username:
            input.w3-input(type="text" name="username" style="width: 40%;")
            p
            label Password:
            input.w3-input(type="password" name="password" style="width: 40%;")
            p
            if message
                p(style="color:red")= message
                p
            input.w3-btn.w3-2020-mosaic-blue(type="submit" value="Login In")