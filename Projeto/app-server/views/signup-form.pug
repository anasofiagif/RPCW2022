extends layout

block content
    .w3-container.w3-2020-mosaic-blue
      .w3-left
        h1 
          a(href='/' style="text-decoration:none") Film Log
      if level == 'admin'
        .w3-right
            h3 
              img(src=`http://localhost:4446/user/profile_picture/${username}` style='width:50px')
              |
              |
              a(href='/profile') #{username}
              |  |        
              a(href='/films') Films
              |  |        
              a(href='/logout') Logout                
      else 
          .w3-right
            h3
              a(href='/films') Films
    if level == 'admin'
      .w3-container
        h3
          b Insert new user
    else 
      .w3-container
        h3
          b Join Film Log
    form.w3-container(action='/signup' method='POST' style='margin: 10px 250px;')
            label Username:
            input.w3-input(type="text" name="username", style="width: 40%;")
            p
            label Password:
            input.w3-input(type="password" name="password", style="width: 40%;")
            p 
            if level == 'admin'
              p
              label Level:
              p
              input.w3-radio(type="radio" value="admin" name="level")
              label   Admin
              p
              input.w3-radio(type="radio" value="producer" name="level" checked)
              label   Producer
              p
            else 
              input(type="hidden" name="level" value="producer")
            if message
                p(style="color:red")= message
                p
            input.w3-btn.w3-2020-mosaic-blue(type="submit" value="Sign Up")    